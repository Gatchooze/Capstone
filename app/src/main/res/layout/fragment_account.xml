<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="13dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:src="@drawable/edit"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_settings"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/howtouse"/>

            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/account_howtouse"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_howtouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/languageoption"/>

            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/account_languageoption"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_languageoption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/termofservice"/>

            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/account_termsofservice"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_termofservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/privacypolicy"/>

            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/account_privacypolicy"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_privacypolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/referralcode"/>

            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/account_referralcode"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_referralcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_account"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/faq"/>

            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/account_faq"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/syncmyewallet"/>

            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/account_syncmyewallet"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_syncmyewallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/helpchat"/>

            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/account_helpchat"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_helpchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_signout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_signout"
        android:layout_below="@+id/account"
        android:layout_marginTop="35dp"
        android:background="@drawable/custom_button3"
        android:textColor="#D73A49"
        android:textAllCaps="false" />

</RelativeLayout>