<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:text="Mall Name"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_name"
        android:layout_marginBottom="8dp"
        android:drawablePadding="4dp"
        android:text="Rating"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_rating" />

    <TextView
        android:id="@+id/list_car_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_rating"
        android:textStyle="bold"
        android:layout_marginEnd="12dp"
        android:drawablePadding="4dp"
        android:text="Car Status"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_car" />

    <TextView
        android:id="@+id/list_motor_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_rating"
        android:layout_toEndOf="@id/list_car_status"
        android:drawablePadding="4dp"
        android:textStyle="bold"
        android:text="Motor Status"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_motor" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_rating"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white"
        android:src="@drawable/ic_next" />

</RelativeLayout>