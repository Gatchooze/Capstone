<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CapstoneProject" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorLighterGrey</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/darker_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="tabStyle">@style/CapstoneTab</item>
        <item name="materialButtonStyle">@style/CapstoneButtonContained</item>
        <item name="materialButtonOutlinedStyle">@style/CapstoneButtonOutlined</item>
        <item name="textInputStyle">@style/CapstoneTextField</item>
        <item name="bottomSheetDialogTheme">@style/CapstoneBottomSheetDialog</item>
        <item name="materialTimePickerTheme">@style/CapstoneTimePicker</item>
        <item name="materialCalendarTheme">@style/CapstoneDatePicker</item>
    </style>

    <style name="Theme.CapstoneProject.NoActionBar" parent="Theme.CapstoneProject">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme1.CapstoneProject" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="CapstoneSeachView" parent="Widget.AppCompat.Light.SearchView">

    </style>

</resources>