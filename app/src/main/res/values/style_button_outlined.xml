<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CapstoneButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Outlined</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="cornerRadius">300dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/button_color_outlined</item>
        <item name="android:textColor">@color/blue</item>
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="ThemeOverlay.App.Button.Outlined" parent="">
        <item name="colorOnSurface">@color/button_color_contained</item>
    </style>
</resources>